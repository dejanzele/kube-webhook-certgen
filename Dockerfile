FROM alpine:3.17.0

COPY kube-webhook-certgen /kube-webhook-certgen

ARG USER=default
ENV HOME /home/$USER

# install sudo as root
RUN apk add --update sudo

# add new user
RUN adduser -D $USER \
        && echo "$USER ALL=(ALL) NOPASSWD: ALL" > /etc/sudoers.d/$USER \
        && chmod 0440 /etc/sudoers.d/$USER

USER $USER
WORKDIR $HOME

ENTRYPOINT ["/kube-webhook-certgen"]
